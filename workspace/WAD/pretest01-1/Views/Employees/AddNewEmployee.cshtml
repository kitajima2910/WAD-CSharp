@model pretest01_1.Models.Employee
@{
    ViewData["Title"] = "AddNewEmployee";
}

<h1>Them nhan vien</h1>
<hr />
<form asp-controller="Employees" asp-action="AddNewEmployee" method="post">
    <div class="form-group col-sm-12">
        <label>Ma nhan vien</label>
        <input asp-for="EmpID" class="form-control col-sm-6" />
        <span asp-validation-for="EmpID" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>Tuoi</label>
        <input asp-for="EmpAge" class="form-control col-sm-6" />
        <span asp-validation-for="EmpAge" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>Ten</label>
        <input asp-for="EmpName" class="form-control col-sm-6" />
        <span asp-validation-for="EmpName" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>Dia chi</label>
        <input asp-for="EmpAddress" class="form-control col-sm-6" />
        <span asp-validation-for="EmpAddress" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>Email</label>
        <input asp-for="EmpEmail" class="form-control col-sm-6" />
        <span asp-validation-for="EmpEmail" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <button type="submit" class="btn btn-outline-primary">Them</button>
    </div>
</form>
<br />
&nbsp;&nbsp;&nbsp;<label class="text-danger">@ViewBag.Msg</label>
<br />
<a asp-controller="Employees" asp-action="ViewEmployeeList">Xem danh sach nhan vien</a>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
