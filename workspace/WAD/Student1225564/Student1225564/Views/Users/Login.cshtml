@model Student1225564.Models.User
@{
    ViewData["Title"] = "Login";
}

<h1>Login page</h1>

<form asp-controller="Users" asp-action="Login" method="post">
    <div class="form-group col-sm-12">
        <label>Username</label>
        <input asp-for="Username" class="form-control col-sm-6" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>Password</label>
        <input asp-for="Password" class="form-control col-sm-6" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <button type="submit" class="btn btn-outline-primary">Login</button>
    </div>
</form>

<br />
&nbsp;&nbsp;&nbsp;<label class="text-danger">@ViewBag.Msg</label>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
