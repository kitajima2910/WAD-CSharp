@model pretest02_1.Models.Account
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />

<form asp-controller="Accounts" asp-action="Login" method="post">
    <div class="form-group col-sm-12">
        <label>Username</label>
        <input asp-for="username" class="form-control col-sm-6" />
        <span asp-validation-for="username" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>Password</label>
        <input asp-for="password" class="form-control col-sm-6" />
        <span asp-validation-for="password" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <button type="submit" class="btn btn-outline-primary">Login</button>
    </div>
</form>

<br />
&nbsp;&nbsp;&nbsp;<label class="text-danger">@ViewBag.Msg</label>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

