@model pretest02_1.Models.Employee
@{
    ViewData["Title"] = "AddNewEmployee";
}

<h1>Add new Employee (@ViewBag.Info)</h1>
<hr />

<form asp-controller="Employees" asp-action="AddNewEmployee" method="post">
    <div class="form-group col-sm-12">
        <label>EmployeeID</label>
        <input asp-for="EmpID" class="form-control col-sm-6" />
        <span asp-validation-for="EmpID" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>DateOfBirth</label>
        <input asp-for="EmpDoB" class="form-control col-sm-6" />
        <span asp-validation-for="EmpDoB" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>EmployeeName</label>
        <input asp-for="EmpName" class="form-control col-sm-6" />
        <span asp-validation-for="EmpName" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>Address</label>
        <textarea asp-for="EmpAddress" class="form-control col-sm-6"></textarea>
        <span asp-validation-for="EmpAddress" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>Email</label>
        <input asp-for="EmpEmail" class="form-control col-sm-6" />
        <span asp-validation-for="EmpEmail" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <button type="submit" value="update" name="submit" class="btn btn-outline-primary">Save</button>
    </div>
</form>
<br />

&nbsp;&nbsp;&nbsp;<label class="text-danger">@ViewBag.Msg</label>
<br />

<a asp-controller="Employees" asp-action="ViewEmployeeList">View Employees List</a>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

