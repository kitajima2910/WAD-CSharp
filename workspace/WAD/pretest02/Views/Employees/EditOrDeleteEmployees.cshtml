@model pretest02.Models.Employees
@{
    ViewData["Title"] = "EditOrDeleteEmployees";
}

<h1>Edit or delete Employees</h1>
<hr />

<form asp-controller="Employees" asp-action="EditOrDeleteEmployees" method="post">
    <div class="form-group col-sm-12">
        <label>EmployeesId</label>
        <input asp-for="EmpID" readonly class="form-control col-sm-6" />
        <span asp-validation-for="EmpID" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>DateOfBirth</label>
        <input asp-for="EmpDoB" class="form-control col-sm-6" />
        <span asp-validation-for="EmpDoB" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>EmployeeName</label>
        <input asp-for="EmpName" class="form-control col-sm-6" />
        <span asp-validation-for="EmpName" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>Address</label>
        <input asp-for="EmpAddress" class="form-control col-sm-6" />
        <span asp-validation-for="EmpAddress" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <label>Email</label>
        <input asp-for="EmpEmail" class="form-control col-sm-6" />
        <span asp-validation-for="EmpEmail" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-12">
        <button type="submit" class="btn btn-outline-primary">Save</button>
        <a asp-controller="Employees" asp-action="Delete" asp-route-empID="@Model.EmpID">Remove</a>
    </div>
</form>
<br />
&nbsp;&nbsp;&nbsp;<label class="text-danger">@ViewBag.Msg</label>
